{
	"builders": [{
		"type": "docker",
		"image": "fedora",
		"export_path": "files/rpm-ostree-update.tar",
		"privileged": "true"
	}],

	"provisioners":[{
		"type": "file",
		"source": "files/fedora-atomic-update-tree.json",
		"destination": "/home/fedora-atomic-update-tree.json"
	} , {
		"type": "file",
		"source": "files/haproxy-rpm-ostree.json",
		"destination": "/home/haproxy-rpm-ostree.json"
	} , {
		"type": "file",
		"source": "files/git-server-rpm-ostree.json",
		"destination": "/home/git-server-rpm-ostree.json"
	} , {
		"type": "shell",
		"inline": [
			"dnf install -y rpm-ostree git",
			"dnf clean all",
			"mkdir -p /home/working",
			"cd /home/working",
			"git clone https://github.com/CentOS/sig-atomic-buildscripts",
			"git clone https://git.fedorahosted.org/git/fedora-atomic.git",
			"mkdir -p /srv/rpm-ostree/repo",
			"cd /srv/rpm-ostree/",
			"ostree --repo=repo init --mode=archive-z2",
			"cd /home/working/fedora-atomic/",
			"git fetch",
			"git checkout f23",
			"curl -o fedora-23-updates.repo https://git.fedorahosted.org/cgit/fedora-repos.git/plain/fedora-updates.repo?h=f23",
			"sed -i 's\/\\$releasever\/23\/g' fedora-23-updates.repo",
			"mv /home/fedora-atomic-update-tree.json /home/working/fedora-atomic/fedora-atomic-update-tree.json",
			"mv /home/haproxy-rpm-ostree.json /home/working/fedora-atomic/haproxy-rpm-ostree.json",
			"mv /home/git-server-rpm-ostree.json /home/working/fedora-atomic/git-server-rpm-ostree.json",
			"rpm-ostree compose tree --repo=/srv/rpm-ostree/repo /home/working/fedora-atomic/fedora-atomic-update-tree.json",
			"rpm-ostree compose tree --repo=/srv/rpm-ostree/repo /home/working/fedora-atomic/haproxy-rpm-ostree.json",
			"rpm-ostree compose tree --repo=/srv/rpm-ostree/repo /home/working/fedora-atomic/git-server-rpm-ostree.json",
			"rm -rf /home/working"
		]
	}]
}