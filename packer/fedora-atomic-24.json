{
	"builders": [{
		"name": "virtualbox",

		"boot_command": [
			"<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks-fedora-atomic-24.cfg<enter><enter>"
		],
		"type": "virtualbox-iso",
		"guest_os_type": "Fedora_64",

		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--vram", "32"]
		],

		"disk_size" : 40000,

		"iso_url": "http://mirror.datacenter.by/pub/fedoraproject.org/alt/atomic/stable/Fedora-Atomic-24-20160820.0/Atomic/x86_64/iso/Fedora-Atomic-dvd-x86_64-24-20160820.0.iso",
		"iso_checksum": "9adbbde1a888545bf785f802ad07986ab841a32c01c37b1d5ca4b638d8dfb248",
		"iso_checksum_type": "sha256",

		"http_directory" : "files",
		"http_port_min" : 9001,
		"http_port_max" : 9001,

		"ssh_pty" : "true",
		"ssh_username": "root",
		"ssh_password": "atomic",
		"ssh_wait_timeout": "20m",
		"guest_additions_mode": "disable",

		"shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
	}, {
		"name": "qemu",

		"boot_command": [
			"<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks-fedora-atomic-24.cfg<enter><enter>"
		],
		"type": "qemu",

		"disk_size" : 40000,

		"iso_url": "http://mirror.datacenter.by/pub/fedoraproject.org/alt/atomic/stable/Fedora-Atomic-24-20160820.0/Atomic/x86_64/iso/Fedora-Atomic-dvd-x86_64-24-20160820.0.iso",
		"iso_checksum": "9adbbde1a888545bf785f802ad07986ab841a32c01c37b1d5ca4b638d8dfb248",
		"iso_checksum_type": "sha256",

		"http_directory" : "files",
		"http_port_min" : 9001,
		"http_port_max" : 9001,

		"format": "qcow2",
		"ssh_pty" : "true",
		"ssh_username": "root",
		"ssh_password": "atomic",
		"ssh_wait_timeout": "20m",

		"shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
	}],

	"provisioners": [{
		"type": "file",
		"source": "files/repo",
		"destination": "/home/rpm-update"
	}, {
		"type": "shell",
		"inline": [
			"set -x",
			"ostree remote add test file:///home/rpm-update --no-gpg-verify",
			"rpm-ostree rebase test:fedora-atomic/f24/x86_64/docker-host"
		]
	}, {
		"type": "shell",
		"inline": [
			"set -x",
			"ostree export --repo=/home/rpm-update fedora-atomic/f24/x86_64/docker-gitserver | docker import - gitserver_base",
			"ostree export --repo=/home/rpm-update fedora-atomic/f24/x86_64/docker-haproxy | docker import - haproxy_base",
			"ostree export --repo=/home/rpm-update fedora-atomic/f24/x86_64/docker-yarn-runner | docker import - yarn-runner_base"
		]
	}, {
               "type": "file",
               "source": "../docker/git-server",
               "destination": "/home/git-server"
	}, {
               "type": "file",
               "source": "../docker/haproxy",
               "destination": "/home/haproxy"
	}, {
               "type": "file",
               "source": "../tests",
               "destination": "/home/tests"
       }, {
               "type": "shell",
               "inline": [
                       "cd /home/haproxy",
                       "echo foo bar > ssl.pem",
                       "docker build -t haproxy ."
               ]
	}, {
               "type": "shell",
               "inline": [
                       "cd /home/git-server",
                       "docker build -t gitserver ."
               ]
	}, {
               "type": "shell",
               "inline": [
                       "echo Rebooting system NOW",
                       "reboot"
               ]
	}, {
               "type": "shell",
               "inline": [
                       "echo System rebooted"
               ]
	}, {
               "type": "file",
               "source": "files/sss_proxy",
               "destination": "/etc/pam.d/sss_proxy"
	}, {
               "type": "shell",
               "inline": [
                       "sed -i -e 's/SELINUX=enforcing/SELINUX=disabled/' /etc/selinux/config"
               ]
	}, {
               "type": "shell",
               "inline": [
                       "useradd -r apache"
               ]
	}, {
               "type": "file",
               "source": "files/sssd.conf",
               "destination": "/etc/sssd/sssd.conf"
	}, {
               "type": "shell",
               "inline": [
                       "chown root /etc/sssd/sssd.conf",
                       "chmod 0600 /etc/sssd/sssd.conf",
                       "systemctl enable sssd",
                       "systemctl start sssd"
               ]
	}, {
               "type": "shell",
               "inline": ["rm /etc/auto.master",
                       "rm /etc/auto.misc"
               ]
	}, {
               "type": "file",
               "source": "files/auto.master",
               "destination": "/etc/auto.master"
	}, {
               "type": "file",
               "source": "files/boot-config",
               "destination": "/var/lib/immut-boot"
	}, {
               "type": "shell",
               "inline": [
                       "systemctl enable cloud-init",
                       "chmod +x /var/lib/immut-boot/config.sh"
                       ]
	}]
}
