{
	"builders": [{
		"name": "virtualbox",

		"boot_command": [
			"<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks-fedora-atomic-24.cfg<enter><enter>"
		],
		"type": "virtualbox-iso",
		"guest_os_type": "Fedora_64",

		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--vram", "32"]
		],

		"disk_size" : 40000,

		"iso_url": "http://mirror.datacenter.by/pub/fedoraproject.org/alt/atomic/stable/Fedora-Atomic-24-20160820.0/Atomic/x86_64/iso/Fedora-Atomic-dvd-x86_64-24-20160820.0.iso",
		"iso_checksum": "9adbbde1a888545bf785f802ad07986ab841a32c01c37b1d5ca4b638d8dfb248",
		"iso_checksum_type": "sha256",

		"http_directory" : "files",
		"http_port_min" : 9001,
		"http_port_max" : 9001,

		"ssh_pty" : "true",
		"ssh_username": "root",
		"ssh_password": "atomic",
		"ssh_wait_timeout": "20m",

		"shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
	}, {
		"name": "qemu",

		"boot_command": [
			"<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks-fedora-atomic-24.cfg<enter><enter>"
		],
		"type": "qemu",

		"disk_size" : 40000,

		"iso_url": "http://mirror.datacenter.by/pub/fedoraproject.org/alt/atomic/stable/Fedora-Atomic-24-20160820.0/Atomic/x86_64/iso/Fedora-Atomic-dvd-x86_64-24-20160820.0.iso",
		"iso_checksum": "9adbbde1a888545bf785f802ad07986ab841a32c01c37b1d5ca4b638d8dfb248",
		"iso_checksum_type": "sha256",

		"http_directory" : "files",
		"http_port_min" : 9001,
		"http_port_max" : 9001,

		"format": "qcow2",
		"ssh_pty" : "true",
		"ssh_username": "root",
		"ssh_password": "atomic",
		"ssh_wait_timeout": "20m",

		"shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
	}, {
		"name": "aws",
		"ami_name": "Atomic-host-{{timestamp}}",
		"type": "amazon-ebs",
		"access_key": "",
		"secret_key": "",
		"region": "eu-west-1",
		"source_ami": "ami-bca639cf",
		"instance_type": "t2.micro",
		"ssh_username": "fedora"
	}],

	"provisioners": [{
		"type": "file",
		"source": "files/repo",
		"destination": "$HOME/rpm-update"
	}, {
		"type": "shell",
		"inline": [
			"set -x",
			"sudo ostree remote add test file://$HOME/rpm-update --no-gpg-verify",
			"sudo rpm-ostree rebase test:fedora-atomic/f23/x86_64/docker-host"
		]
	}, {
		"type": "shell",
		"inline": [
			"set -x",
			"sudo ostree export --repo=$HOME/rpm-update fedora-atomic/f23/x86_64/docker-gitserver | sudo docker import - gitserver_base",
			"sudo ostree export --repo=$HOME/rpm-update fedora-atomic/f23/x86_64/docker-haproxy | sudo docker import - haproxy_base"
		]
	}, {
		"type": "file",
		"source": "../docker/git-server",
		"destination": "$HOME/git-server"
	}, {
		"type": "file",
		"source": "../docker/haproxy",
		"destination": "$HOME/haproxy"
	}, {
		"type": "shell",
		"inline": [
			"cd $HOME/haproxy",
			"echo foo bar > ssl.pem",
			"sudo docker build -t haproxy ."
		]
	}, {
		"type": "shell",
		"inline": [
			"cd $HOME/git-server",
			"sudo docker build -t gitserver ."
		]
	}, {
		"type": "shell",
		"inline": [
			"echo Rebooting system NOW",
			"sudo systemctl reboot",
			"echo System rebooted"
		]
	}, {
		"type": "file",
		"source": "files/sss_proxy",
		"destination": "$HOME/sss_proxy"
	}, {
		"type": "shell",
		"inline": [
			"sudo mv $HOME/sss_proxy /etc/pam.d/sss_proxy"
		]
	}, {
		"type": "shell",
		"inline": [
			"sudo sed -i -e 's/SELINUX=enforcing/SELINUX=disabled/' /etc/selinux/config"
		]
	}, {
		"type": "file",
		"source": "files/sssd.conf",
		"destination": "$HOME/sssd.conf"
	}, {
		"type": "shell",
		"inline": [
			"sudo mv $HOME/sssd.conf /etc/sssd/sssd.conf"
		]
	}, {
		"type": "shell",
		"inline": [
			"sudo chown root /etc/sssd/sssd.conf",
			"sudo chmod 0600 /etc/sssd/sssd.conf",
			"sudo systemctl enable sssd",
			"sudo systemctl start sssd",
			"sudo systemctl status -l sssd"
		]
	}, {
		"type": "shell",
		"inline": [
			"sudo rm /etc/auto.master",
			"sudo rm /etc/auto.misc"
		]
	}, {
		"type": "file",
		"source": "files/auto.master",
		"destination": "$HOME/auto.master"
	}, {
		"type": "shell",
		"inline": [
			"sudo mv $HOME/auto.master etc/auto.master"
		]
	}, {
		"type": "file",
		"source": "files/boot-config",
		"destination": "$HOME/immut-boot"
	}, {
		"type": "shell",
		"inline": [
			"sudo mv $HOME/immut-boot /var/lib/immut-boot"
		]
	}, {
		"type": "shell",
		"inline": [
			"sudo systemctl enable cloud-init",
			"sudo chmod +x /var/lib/immut-boot/config.sh"
		]
	}]
}
