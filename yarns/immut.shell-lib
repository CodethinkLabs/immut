# Shell library for Immut yarns.


run_in_docker(){
    set -e
    set -x
    cid_file="$1"
    shift
    docker exec `cat "$cid_file"` sh -c "$@"
}

get_docker_ip(){
    cid_file="$1"
    cid=$(cat $cid_file)
    ip="$(docker inspect  --format '{{ .NetworkSettings.IPAddress }}' $cid)"
    echo $ip
}
